<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PaisNaEscola"
             x:Class="PaisNaEscola.MainPage">
    <ContentPage.Content>

        <StackLayout>
            
            
                <Image WidthRequest="250" HeightRequest="250" BackgroundColor="Transparent" Source="logo.png"/>
            

            
                <Button Clicked="SenhaPais" Text="PAIS"  WidthRequest="200" HeightRequest="100" />
            

            
                <Button Clicked="SenhaProf" Text="PROFESSOR"  WidthRequest="200" HeightRequest="100"/>
            

            
                <Button Clicked="SenhaCoord" Text="COORDENADOR" WidthRequest="200" HeightRequest="100"/>
            
        
        </StackLayout>
        
    </ContentPage.Content>

</ContentPage>
